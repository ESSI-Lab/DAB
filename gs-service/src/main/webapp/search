      	        jQuery('#where-div').append(hideMapInputControlButton);

	      	  	jQuery('#onoffswitch-div-hideMapInputControl').css('z-index','1');
	        	jQuery('#onoffswitch-div-hideMapInputControl').css('margin-top','-22px');
