         	    advConstDiv += GIAPI.search.constWidget.hlConstraint ('get');

                advConstDiv += GIAPI.search.constWidget.booleanConstraint('get','gdc');
              
                advConstDiv += GIAPI.search.constWidget.evtOrdConstraint('get');     
               
